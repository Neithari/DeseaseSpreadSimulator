{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "vcpkg_base",
      "hidden": true,
      "cacheVariables": {
        "VCPKG_ROOT": "D:/Dev/vcpkg"
      }
    },
    {
      "name": "vcpkg-msvc-x64-debug-developer",
      "displayName": "VCPKG MSVC x64 Debug (Developer Mode)",
      "inherits": [
        "windows-msvc-debug-developer-mode",
        "vcpkg_base"
      ]
    },
    {
      "name": "vcpkg-msvc-x64-release-developer",
      "displayName": "VCPKG MSVC x64 Release (Developer Mode)",
      "inherits": [
        "windows-msvc-release-developer-mode",
        "vcpkg_base"
      ]
    },
    {
      "name": "vcpkg-msvc-x64-debug",
      "displayName": "VCPKG MSVC x64 Debug (User Mode)",
      "inherits": [
        "windows-msvc-debug-user-mode",
        "vcpkg_base"
      ]
    },
    {
      "name": "vcpkg-msvc-x64-release",
      "displayName": "VCPKG MSVC x64 Release (User Mode)",
      "inherits": [
        "windows-msvc-release-user-mode",
        "vcpkg_base"
      ]
    },
    {
      "name": "vcpkg-windows-clang-debug",
      "displayName": "VCPKG Clang Debug",
      "inherits": [
        "windows-clang-debug",
        "vcpkg_base"
      ]
    },
    {
      "name": "vcpkg-windows-clang-release",
      "displayName": "VCPKG Clang Release",
      "inherits": [
        "windows-clang-release",
        "vcpkg_base"
      ]
    }
  ],
  "buildPresets": [
    {
      "name": "build-vcpkg-msvc-x64-debug-developer",
      "displayName": "MSVC debug developer",
      "configurePreset": "vcpkg-msvc-x64-debug-developer",
      "description": "MSVC debug developer mode"
    },
    {
      "name": "build-vcpkg-msvc-x64-release-developer",
      "displayName": "MSVC release developer",
      "configurePreset": "vcpkg-msvc-x64-release-developer",
      "description": "MSVC release developer mode"
    },
    {
      "name": "verbose-build-vcpkg-msvc-x64-debug-developer",
      "displayName": "Verbose MSVC debug build",
      "description": "Passes -v to Ninja",
      "configurePreset": "vcpkg-msvc-x64-debug-developer",
      "nativeToolOptions": [ "-v" ]
    },
    {
      "name": "verbose-build-vcpkg-msvc-x64-release-developer",
      "displayName": "Verbose MSVC release build",
      "description": "Passes -v to Ninja",
      "configurePreset": "vcpkg-msvc-x64-release-developer",
      "nativeToolOptions": [ "-v" ]
    },
    {
      "name": "build-vcpkg-windows-clang-debug",
      "displayName": "Clang debug build",
      "configurePreset": "vcpkg-windows-clang-debug",
      "description": "Clang debug build"
    },
    {
      "name": "build-vcpkg-windows-clang-release",
      "displayName": "Clang release build",
      "configurePreset": "vcpkg-windows-clang-release",
      "description": "Clang release build"
    },
    {
      "name": "verbose-build-vcpkg-windows-clang-debug",
      "displayName": "Verbose Clang debug build",
      "description": "Passes -v to Ninja",
      "configurePreset": "vcpkg-windows-clang-debug",
      "nativeToolOptions": [ "-v" ]
    },
    {
      "name": "verbose-build-vcpkg-windows-clang-release",
      "displayName": "Verbose Clang release build",
      "description": "Passes -v to Ninja",
      "configurePreset": "vcpkg-windows-clang-release",
      "nativeToolOptions": [ "-v" ]
    }
  ]
}
